<Page x:Class="Pokemon.Pages.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pokemon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="800"
      Title="Search">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txbSearch" Height="25" Margin="20,24,80,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center"/>
        <Button x:Name="btnSearch" Content="S" Height="25" Margin="0,24,21,0" VerticalAlignment="Top" Click="btnSearch_Click" HorizontalAlignment="Right" Width="40"/>
        <Button x:Name="btnRandom" Content="R" Margin="0,60,21,0" Click="btnRandom_Click" HorizontalAlignment="Right" Width="40" Height="25" VerticalAlignment="Top"/>
        <Image x:Name="imgSprite" Stretch="Uniform" Width="150" Height="150" Margin="182,96,468,164"/>
        <TextBlock x:Name="txbInfo" Width="200" Height="200" Margin="373,73,227,137" TextWrapping="Wrap"/>
        <Button x:Name="btnCatch" Content="Throw ball" Margin="260,0,354,40" Click="btnCatch_Click" Height="80" VerticalAlignment="Bottom"/>

    </Grid>
</Page>
