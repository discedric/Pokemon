<Page x:Class="Pokemon.Pages.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pokemon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="800"
      Title="Search">

    <Grid>
        <TextBox x:Name="txbSearch" HorizontalAlignment="Left" Height="25" Margin="20,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="700" TextAlignment="Center"/>
        <Button x:Name="btnSearch" Content="S" HorizontalAlignment="Left" Height="25" Margin="739,24,0,0" VerticalAlignment="Top" Width="40" Click="btnSearch_Click"/>
        <Button x:Name="btnRandom" Content="R" HorizontalAlignment="Left" Height="25" Margin="739,60,0,0" VerticalAlignment="Top" Width="40" Click="btnRandom_Click"/>
        <Image x:Name="imgSprite" HorizontalAlignment="Left" Height="150" Margin="29,95,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBlock x:Name="txbInfo" HorizontalAlignment="Left" Height="200" Margin="220,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500"/>
        <Button x:Name="btnCatch" Content="Throw ball" HorizontalAlignment="Left" Height="80" Margin="260,290,0,0" VerticalAlignment="Top" Width="186" Click="btnCatch_Click"/>

    </Grid>
</Page>
